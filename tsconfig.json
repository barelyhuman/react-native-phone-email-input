{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2015",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution":"Node",
    "allowSyntheticDefaultImports":true,
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types"
  },
  "exclude": [
    "node_modules",
    "dist",
    "node_modules",
    "./node_modules",
    "./node_modules/*"
  ]
}
